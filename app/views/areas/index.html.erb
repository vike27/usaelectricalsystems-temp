<p id="notice"><%= notice %></p>

<h1>Listing Areas</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Heading1</th>
      <th>Body1</th>
      <th>Heading2</th>
      <th>Body2</th>
      <th>Information</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.city %></td>
        <td><%= area.heading1 %></td>
        <td><%= area.body1 %></td>
        <td><%= area.heading2 %></td>
        <td><%= area.body2 %></td>
        <td><%= area.information %></td>
        <td><%= link_to 'Show', area %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

